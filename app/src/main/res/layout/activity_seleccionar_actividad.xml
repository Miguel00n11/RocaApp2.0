<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/btn_Background_Cancelar"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnIrReportesCompactacion"
                android:layout_width="match_parent"
                android:text="Compactaciones"
                android:padding="24sp"
                android:backgroundTint="#F4511E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnIrReportesCilindros"
                android:layout_width="match_parent"
                android:text="Concretos"
                android:padding="24sp"
                android:backgroundTint="#F4511E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnItReportesMecanicas"
                android:layout_width="match_parent"
                android:text="MecÃ¡nicas de suelos"
                android:padding="24sp"
                android:backgroundTint="#F4511E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_height="match_parent"/>
        </LinearLayout>



    </ScrollView>


</LinearLayout>