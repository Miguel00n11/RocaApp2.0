<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/btn_Background_Cancelar"
        android:orientation="horizontal"
        android:layout_gravity="center"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginVertical="6dp"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnIrReportesCompactacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="6dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#232323"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Aquí puedes agregar cualquier otro contenido que desees dentro del CardView -->

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#232323"
                            android:scaleType="fitCenter"
                            android:src="@drawable/imagencala" /> <!-- Establecer la imagen deseada aquí -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compactaciones"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                        <!-- También puedes agregar otros elementos como texto o botones aquí -->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnIrReportesCilindros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#232323"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Aquí puedes agregar cualquier otro contenido que desees dentro del CardView -->

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#232323"
                            android:scaleType="fitCenter"
                            android:src="@drawable/imagencilindros" /> <!-- Establecer la imagen deseada aquí -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cilindros"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                        <!-- También puedes agregar otros elementos como texto o botones aquí -->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnItReportesMecanicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="6dp"

                    android:alpha=".5"
                    android:clickable="false"
                    android:focusable="false"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#232323"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Aquí puedes agregar cualquier otro contenido que desees dentro del CardView -->

                        <!-- Establecer la imagen deseada aquí -->

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#232323"
                            android:scaleType="fitCenter"
                            android:src="@drawable/imagenmecanica" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mecánica"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                        <!-- También puedes agregar otros elementos como texto o botones aquí -->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnIrReportesVigas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#232323"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Aquí puedes agregar cualquier otro contenido que desees dentro del CardView -->

                        <!-- Establecer la imagen deseada aquí -->

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#232323"
                            android:scaleType="fitCenter"
                            android:src="@drawable/imagenvigas" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vigas"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                        <!-- También puedes agregar otros elementos como texto o botones aquí -->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>