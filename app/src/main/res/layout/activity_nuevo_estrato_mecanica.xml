<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/background_Registro_Estrato"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Registro de estrato"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="3dp" />

    <EditText
        android:id="@+id/etNombreEstrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="DescripciÃ³n"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/etEspesorEstrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="Espesor estrato [m]"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:text="20"
        android:textColorHint="@color/white" />


    <Button
        android:id="@+id/btnGuardarEstrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFCA28"
        android:textColor="@color/black"
        android:text="Guardar" />




</LinearLayout>