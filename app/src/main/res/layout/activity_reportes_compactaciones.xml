<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/btn_Background_Cancelar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@color/btn_Background_Cancelar"
        android:orientation="vertical"

        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Lista de Reportes de Compactaciones"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:gravity="right"
            android:layout_height="wrap_content">


            <SearchView
                android:id="@+id/svBuscarReportesCompactacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/searchview_background"


                android:backgroundTint="#FFFFFF"

                android:foregroundTint="#6A6868"
                android:iconifiedByDefault="false"

                android:inputType="textCapSentences"
                android:queryHint="Buscar..."
                android:visibility="gone"
                app:cardCornerRadius="18dp" />

            <Switch
                android:id="@+id/swVerTodosReportesCompactaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="@color/background_Registro_Cala"
                android:checked="false"
                android:text="Ver todos"
                android:layout_marginLeft="14dp"
                android:textColor="@color/white"
                android:textOff="Todos"
                android:textOn="actuales"
                android:trackTint="@color/grey" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0E1237"
            app:cardCornerRadius="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvObrasCompactacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                tools:ignore="MissingConstraints" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_Background_Cancelar">

        <Button

            android:id="@+id/btnRegistroCompactacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:backgroundTint="#66BB6A"
            android:text="+ Reportes compactaciones"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>