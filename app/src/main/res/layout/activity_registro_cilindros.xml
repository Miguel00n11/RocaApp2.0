<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="12dp"
    android:orientation="vertical"
    tools:context=".RegistroCompactaciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:text="Reporte de cilindros"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvNumeroReporteCilindros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:gravity="end"
            android:text="1"
            android:textSize="24sp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#DCDCDC"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/grey"

                        app:cardCornerRadius="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center"
                            android:text="Datos Generales."

                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:hint="Obra"
                            android:textColorHint="@color/grey"

                            app:endIconMode="clear_text"
                            app:helperTextTextColor="#D81B60"
                            app:hintTextColor="@color/grey"
                            app:startIconTint="@color/grey">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etObraCilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilFechaMuestreoCompactaciones"
                            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:layout_weight="1"
                            android:hint="Fecha"
                            android:onClick="mostrarCalendarioMuestreoMecanica"
                            android:textColorHint="@color/grey"
                            app:endIconDrawable="@drawable/baseline_calendar_month_24"
                            app:endIconMode="custom"
                            app:endIconTint="#7E57C2"
                            app:helperTextTextColor="#D81B60"
                            app:hintTextColor="@color/grey"
                            app:startIconTint="#494949">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etFechaCompactacion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#DCDCDC"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/grey"

                        app:cardCornerRadius="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center"
                            android:text="Datos de la prueba."

                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>




                    <Spinner
                        android:id="@+id/spnTipoMuestreoCilindros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginHorizontal="40dp"
                        android:layout_marginVertical="3dp"
                        android:backgroundTint="@color/background_Registro_Cala"

                        android:backgroundTintMode="add"
                        android:spinnerMode="dialog"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:hint="Elemento colado"
                        android:textColorHint="@color/grey"

                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#D81B60"
                        app:hintTextColor="@color/grey"
                        app:startIconTint="@color/grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etElementoColadoCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:hint="Ubicación"
                        android:textColorHint="@color/grey"

                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#D81B60"
                        app:hintTextColor="@color/grey"
                        app:startIconTint="@color/grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUbicacionCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:hint="f'c"
                        android:layout_weight="1"
                        app:suffixText="kg/cm²"
                        android:textColorHint="@color/grey"

                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#D81B60"
                        app:hintTextColor="@color/grey"
                        app:startIconTint="@color/grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFCCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:hint="Volumen total"
                        android:layout_weight="1"
                        app:suffixText="m³"
                        android:textColorHint="@color/grey"

                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#D81B60"
                        app:hintTextColor="@color/grey"
                        app:startIconTint="@color/grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etVolumenCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spnTipoConcretoCilindros"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        android:layout_marginHorizontal="40dp"
                        android:layout_marginVertical="3dp"
                        android:backgroundTint="@color/background_Registro_Cala"
                        android:backgroundTintMode="add"
                        android:spinnerMode="dialog"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:hint="Edad Diseño"
                        android:textColorHint="@color/grey"

                        app:endIconMode="clear_text"
                        app:helperTextTextColor="#D81B60"
                        app:hintTextColor="@color/grey"
                        app:suffixText="d"
                        app:startIconTint="@color/grey">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEdadCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T.M.A. [mm]:" />

                        <EditText
                            android:id="@+id/etTMACilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="T.M.A. [mm]"
                            android:inputType="number|numberDecimal"
                            android:selectAllOnFocus="true" />


                    </LinearLayout>

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Concretera:" />

                        <EditText
                            android:id="@+id/etConcreteraCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Concretera"
                            android:inputType="textCapCharacters"
                            android:selectAllOnFocus="true" />


                    </LinearLayout>

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="H.O. Prop (C:A:G):" />

                        <EditText
                            android:id="@+id/etHOPropCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="cemento:arena:grava"
                            android:inputType="text"
                            android:selectAllOnFocus="true" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aditivo:" />

                        <EditText
                            android:id="@+id/etAditivoCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Aditivo"
                            android:inputType="number|numberDecimal"
                            android:selectAllOnFocus="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remisión:" />

                        <EditText
                            android:id="@+id/etRemisionCilindros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Remisión"
                            android:inputType="number|numberDecimal"
                            android:selectAllOnFocus="true" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#DCDCDC"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"

                    android:orientation="vertical">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rev. Diseño [cm]:" />

                            <EditText
                                android:id="@+id/etRevenimientoProyCilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Rev. Diseño [cm]"
                                android:inputType="textPersonName"
                                android:selectAllOnFocus="true" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rev. obtenido [cm]:" />

                            <EditText
                                android:id="@+id/etReveniminetoObt1Cilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="R1 [cm]"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />

                            <EditText
                                android:id="@+id/etReveniminetoObt2Cilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="R2 [cm]"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperatura [°C]:" />

                            <EditText
                                android:id="@+id/etTemperaturaCilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="[°C]"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="No. Moldes:" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/etMolde1Cilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Molde 1"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />

                            <Spinner
                                android:id="@+id/spnMolde1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/btn_Background_Acceder"
                                android:backgroundTintMode="add"
                                android:spinnerMode="dialog"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/etMolde2Cilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Molde 2"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />

                            <Spinner
                                android:id="@+id/spnMolde2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/btn_Background_Acceder"
                                android:backgroundTintMode="add"
                                android:spinnerMode="dialog"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/etMolde3Cilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Molde 3"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />

                            <Spinner
                                android:id="@+id/spnMolde3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/btn_Background_Acceder"
                                android:backgroundTintMode="add"
                                android:spinnerMode="dialog"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/etMolde4Cilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Molde 4"
                                android:inputType="number|numberDecimal"
                                android:selectAllOnFocus="true" />

                            <Spinner
                                android:id="@+id/spnMolde4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/btn_Background_Acceder"
                                android:backgroundTintMode="add"
                                android:spinnerMode="dialog"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Horarios" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/etHoraSalidaCilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="H. Salida planta"
                                android:inputType="time"
                                android:selectAllOnFocus="true" />

                            <EditText
                                android:id="@+id/etHorallegadaCilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="H. llegada"
                                android:inputType="time"
                                android:selectAllOnFocus="true" />

                            <EditText
                                android:id="@+id/etHoraMuestreoCilindros"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="H. Muestreo"
                                android:inputType="time"
                                android:selectAllOnFocus="true" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnCancelarRegistroCilindros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_Background_Cancelar"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/btnGuardarRegistroCilindros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_Background_Acceder"
                    android:text="Guardar" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>