        android:theme="@style/Theme.RocaApp20"
        tools:targetApi="31">
        <activity
            android:name=".vigas.RegistroVigas"
            android:exported="false" />
        <activity
            android:name=".vigas.ReportesVigas"
            android:exported="false" />
        <activity
            android:name=".cilindros.RegistroCilindros"
            android:exported="false" />
        <activity
